{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", "scripts"],
  "compilerOptions": {
    "jsx": "react",
    "paths": {
      "api/*": ["./src/api/*"],
      "browser/*": ["./src/browser/*"],
      "main/*": ["./src/main/*"],
    },
    "outDir": "dist",
    "rootDir": "src",
    "types": ["electron", "webpack-env"]
  },
  "exclude": ["**/dist/**/*", "**/node_modules"]
}
